<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:CloudyMobile.Maui"
			 x:Class="CloudyMobile.Maui.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="PageBackgroundColor">#181818</Color>
            <Color x:Key="PrimaryTextColor">White</Color>
            <Color x:Key="PrimaryAccentColor">#E1477E</Color>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryAccentColor}" />
                <Setter Property="Padding" Value="5" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>